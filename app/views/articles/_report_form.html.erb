<% article_errors %>
<div id = 'articleForm'>
<%= form_for(@formArticle) do |f| %>
	<%= f.hidden_field :article_type_id, :value => @type[:value] %>
	<%= f.hidden_field :assigned_albums, :value => @formArticle.already_assigned_albums %>
	<%= f.hidden_field :assigned_videos, :value => @formArticle.already_assigned_videos %>
	
	<%= f.label :accident_date, 'Дата описываемого события' %><br />
	<%= f.date_select :accident_date, :start_year => 2000, :end_year => Date.today.year, :order => [:day, :month, :year], :use_month_names => ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'] %><br /><br />
	
	<br />
	<div class="field">
		
	</div> 
    <div class = 'field' >
		<%= f.label :attachment_files, 'Загрузить вложения ' %> 
		<%= f.file_field :attachment_files, :multiple => true %>
    </div>
				  <% if @albums != [] or @videos != [] %>
					   <br />
					  <% if @albums != [] %>
					  <div style = 'width: 300px;'  id = 'album_drop_list' class = 'my_drop_list'>
						<div id = 'choose_album' class = 'selected_value'>Вложить фотоальбомы</div>
						<div id = 'albums_list' style = 'display: none;' class = 'drop_values'>
							<% @albums.each do |album| %>
								<div class = 'drop_value' item-type = 'albums'  val = '<%= album.id.to_s %>' was_selected = 'false' onclick = 'add_content_to_article(this)'><%= album.name %></div>
							<% end %>
						</div>
					  </div>
					  <% end %>
					  <% if @videos != [] %>
					  <div style = 'width: 300px;' id = 'video_drop_list' class = 'my_drop_list'>
						<div id = 'choose_video' class = 'selected_value'>Вложить видео</div>
						<div id = 'videos_list' style = 'display: none;' class = 'drop_values'>
							<% @videos.each do |video| %>
								<div val = '<%= video.id.to_s %>' item-type = 'videos' was_selected = 'false' class = 'drop_value' onclick = 'add_content_to_article(this)'><%= video.alter_name %></div>
							<% end %>
						</div>
					  </div>
					  <% end %>
				  <% end %>
				  <br /> <br />
		<div class = 'field'>
			
			<table style = 'width: 100%;'>
				<tr>
					<td>
						<%= f.label :name, 'Название мероприятия' %><br />
						<%= f.text_field :name, :size => 100, :class => 't_field' %>	<br />
						<div>
							<p class = 'istring <%= @name_f_color if @name_f_color != nil %>' id = 'nLength'>
								<span id = 'txtL'></span> 
								<span id = 'txtErr'>
									<%= @name_error.html_safe if @name_error != nil %>
								</span>
								<span id = 'txtErrSrv'>
									<%= @name_error if @name_error != nil %>
								</span>
							</p>
							<br /> <br />
						</div>
					</td>
				</tr>
				<tr>
					<td align = 'left'>
						<%= f.label :content, 'Содержание отчёта' %><br /><br />
						<table id = 'formMenuTable'>
							<tr>
								<td id = 'formButtons'>
								</td>
							</tr>
							<tr>
								<td id = 'formMenus'>
								</td>
							</tr>
						</table>
						<%= f.text_area :content, :cols => 90, :rows => '7', :defaultRows => '7', :class=> 't_area', :onkeyup => 'changingTextarea(this)' %>
						<div><p class = 'istring <%= @content_f_color if @content_f_color != nil %>' id = 'cLength'><span id = 'txtL'></span> <span id = 'txtErr'><%= @content_error.html_safe if @content_error != nil %></span><span id = 'txtErrSrv'><%= @content_error if @content_error != nil %></span></p></div>
						<div class="actions">
							<%= f.submit 'Сохранить отчёт', :class => 'butt' %>
						</div>
					</td>
				</tr>
				<tr>
					<td id = 'formPhotos'>
						<div><p class = 'istring <%= @photos_f_color if @photos_f_color != nil %>' id = 'iLength'><span id = 'txtL'></span> <span id = 'txtErr'><%= @photos_error.html_safe if @photos_error != nil %></span><span id = 'txtErrSrv'><%= @photos_error if @photos_error != nil %></span></p></div>
						<div class = 'dropzone' id = 'ph_to_frm'>
						</div>
						<div id = 'uploadedPhotos'>
						</div>
						<div><p class = 'istring <%= @photos_f_color if @photos_f_color != nil %>' id = 'iLength'><span id = 'txtL'></span> <span id = 'txtErr'><%= @photos_error.html_safe if @photos_error != nil %></span><span id = 'txtErrSrv'><%= @photos_error if @photos_error != nil %></span></p></div>
	
					</td>
				</tr>
			</table>
						
		</div>

				


<% end %>
</div>
 <br /> <br /> <br /> <br />