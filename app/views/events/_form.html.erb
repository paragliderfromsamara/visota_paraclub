<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :post_date, 'Дата размещения' %><br />
    <%= f.datetime_select :post_date, :start_year => 2000, :end_year => Date.today.year, :order => [:day, :month, :year], :use_month_names => ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'] %>
  </div>
    <div class="field">
    <%= f.label :display_area_id, 'Зоны видимости' %><br />
    <%= my_collection_select(@event.display_area_list, 'display_area_id', 'event', @event.get_display_area_list_item, '') %>
  </div>
  <div class="field">
    <%= f.label :status_id, 'Статус новости' %><br />
    <%= my_collection_select(@event.statuses_list, 'status_id', 'event', @event.get_status_item, '') %>
  </div>
  <div class="field">
    <%= f.label :title, 'Заголовок новости' %><br />
    <%= f.text_field :title, :size => '118' %>
  </div>
  <div class="field">
    <%= f.label :short_content, 'Выдержка из новости' %><br />
    <%= f.text_area :short_content, :cols => '90', :rows => '5' %>
  </div>
  <div class="field">
    <%= f.label :content, 'Текст новости' %><br />
    <%= f.text_area :content, :cols => '90', :rows => '20' %>
  </div>
  <div class="field">
    <%= f.label :uploaded_photos, 'Загрузить фотографии ' %>
	<%= f.file_field :uploaded_photos, :multiple => true %>
  </div> 
  <div class="actions">
    <%= f.submit 'Сохранить новость' %>
  </div>
<% end %>
